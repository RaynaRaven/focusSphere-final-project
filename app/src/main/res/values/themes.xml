<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FocusSphere" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="CardView." parent="CardView">
        <item name="android:foreground">@drawable/gradient_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="alpha">155</item>
<!--        <item name="cardElevation">0dp</item>-->
    </style>

    <style name="Theme.FocusSphere.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorMagentaHaze</item>
<!--        <item name="windowSplashScreenAnimatedIcon">@drawable/</item>-->
        <item name="postSplashScreenTheme">@style/Theme.FocusSphere</item>
    </style>

    <style name="Theme.FocusSphere" parent="Base.Theme.FocusSphere" />
</resources>